@page
@model RiddelMyExam.Pages.participantModel
@{
}
<style>
    .container-border {
        border: 2px solid #ddd; /* Add your preferred border color */
        border-radius: 10px; /* Add border-radius for rounded corners */
        padding: 30px; /* Add padding for spacing inside the container */
        margin-top: 20px; /* Add margin for spacing between the container and other elements */
    }
</style>

@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-warning">
        @Model.ErrorMessage
    </div>
}

@if (Model.Questions != null && Model.Questions.Count > 0)
{
    <form method="post" >
        <div class="question-container">
            <p>@Model.Questions[Model.CurrentQuestionIndex].qst</p>
            <div>
                <label for="question4" class="col-sm-4 col-form-label">answers:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Option3" name="correct" placeholder="Enter correct answer">
                </div>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
}
else
{
    <p>No questions available.</p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
